<div class="nested-fields">
    <div class="field form-group">
      <%= f.label :image, "Photo" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.collection_select(:category_id, @categories, :id, :name, {prompt: "Choose category"}, {class: "form-control form_cate"}) %>
    </div>
    <div class="field form-group">
      <%= f.text_field :name, class: "form-control", placeholder: "Photo Name" %>
    </div>
    <div class="field form-group">
      <%= f.text_area :description, class: "form-control", placeholder: "Photo Description" %>
    </div>
    <%= link_to_remove_association "Remove Field", f %>
</div>
