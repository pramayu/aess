<%= title "Contact Us" %>
<style>
.gras {
      background: -webkit-linear-gradient(right, rgba(255,255,255,0.2), rgba(255,255,255,1) 40%) !important;
      background: -moz-linear-gradient(right, rgba(255,255,255,0.2), rgba(255,255,255,1) 40%) !important;
      background: -ms-linear-gradient(right, rgba(255,255,255,0.2), rgba(255,255,255,1) 40%) !important;
      background: -o-linear-gradient(right, rgba(255,255,255,0.2), rgba(255,255,255,1) 40%) !important;
  }
</style>
<div class="contact container">
  <div class="data-contact">
    <div class="col-md-4 left">
      <h4 class="nb">Hubungi kami</h4>
      <div class="contact-form">
        <%= form_for @contact do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control frm_", placeholder: "Nama" %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, class: "form-control frm_", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <%= f.text_field :phone, class: "form-control frm_", placeholder: "No HP" %>
          </div>
          <div class="form-group">
            <%= f.text_area :message, class: "form-control frm_ txt_area", placeholder: "Pesan" %>
          </div>
          <div class="form-group hidden">
            <%= f.text_field :nickname, class: "form-control frm_", hint: "leave this field blank" %>
          </div>
          <div class="btn_send">
            <%= f.submit "SEND", class: "btn_snd" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 right">
      <div class="emn">
        <h4 class="email"><a href="mailto:ruangide.yk@gmail.com">RUANGIDE.YK@GMAIL.COM</a></h4>
      </div>
      <div class="meds">
        <p><a href="#">FACEBOOK</a></p>
        <p><a href="#">INSTAGRAM</a></p>
        <p><a href="#">TWITTER</a></p>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>
